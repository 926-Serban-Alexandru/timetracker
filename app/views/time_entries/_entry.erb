<tr id="<%= dom_id(entry) %>">
  <td><%= entry.date %></td>
  <td><%= entry.distance %></td>
  <td><%= entry.duration %></td>
  <td><%= number_with_precision((entry.distance.to_f / entry.duration), precision: 2) rescue 0 %> km/min</td>
  <td>
  <div class="d-flex justify-content-center gap-2">
    <%= link_to "Edit", 
            edit_time_entry_path(entry, user_id: params[:user_id]), 
            data: { turbo_stream: true },
            class: "btn btn-sm btn-warning text-dark edit-btn" %>

    <%= button_to "Delete", 
            time_entry_path(entry, user_id: params[:user_id]), 
            method: :delete, 
            form: { data: { turbo_confirm: "Are you sure?" } }, 
            class: "btn btn-sm btn-danger text-white delete-btn" %>
  </div>
</td>

</tr>
