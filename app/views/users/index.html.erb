<div class="container fluid px-0 py-5 text-center">
  <h1 class="display-4 mb-4">All Users</h1>

  <!-- NEW USER FORM -->
  <div class="mb-5 mx-auto" style="max-width: 500px;">
    <%= render "form", user: @user %>
  </div>
  <br><br>
  </div>
  <!-- USERS TABLE -->
  <div class="d-flex justify-content-center">
  <div class="table-responsive mb-4 mr-auto" style="width: 900px; margin-left: 100px">
    <table class="table table-striped w-100">
      <thead class="thead-dark">
        <tr>
          <th style="width: 20%">Name</th>
          <th style="width: 60%">Email</th>
          <th style="width: 20%">Actions</th>
        </tr>
      </thead>
      <tbody id="users">
        <% @users.each do |user| %>
          <% if @editing_user&.id == user.id %>
            <%= render "edit_row", user: @editing_user %>
          <% else %>
            <%= render "row", user: user %>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>
  </div>






